{
    "name": "Facebook Heart Reacts",
    "description": "Adds the heart reaction to facebook messages",
    "version": "1.1.0",
    "manifest_version": 2,
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
	"48": "icons/icon48.png",
	"128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.facebook.com/messages/*",
                "http://www.facebook.com/messages/*",
                "https://www.messenger.com/*",
                "http://www.messenger.com/*"
            ],
            "js": [
                "js/inject-script.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "js/fb-heart-react.js"
    ]
}
